  <ItemGroup>
    <None Remove="C:\Users\ivo\source\repos\private\approov-refit\refit_logo.png" />
    <None Include="../">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
    <None Include="../approov_logo.png">
